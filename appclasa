#include <iostream>
#include <cstring>
using namespace std;

short int categ_produs;
short int variab_categ;
string categorie_pr;



  
int main () 
 { 
cout << "Apasati 'Enter' pentru afisarea categoriilor.";
  
cin.get ();
  
cout << " Selectati categoria produsului dorit : " << endl << endl;
  
cout << " 1. Electrocasnice" << endl;
  
cout << " 2. Telefoane / Tablete" << endl;
  
cout << " 3. Laptop / Desktop / IT" << endl;
  
cout << " 4. Sport / Biciclete / Trotinete" << endl;

cin>>categ_produs;

if(categ_produs>=1 and categ_produs<=4)
{
	variab_categ=1;
}
else
{
while(variab_categ!=1)
    {
    cin >> categ_produs;
    if(categ_produs>=1 and categ_produs<=4)
        {
	    variab_categ=1;
        }
    }
}
if(categ_produs==1)
{
    categorie_pr="electrocasnicelor";
}
else if(categ_produs==2)
{
    categorie_pr="telefoanelor / tabletelor"
}
else if(categ_produs==3)
{
    categorie_pr="laptop / desktop / it"
}
else if(categ_produs==4)
{
    
}
if(variab_categ)
{
    cout << "Apasa 'Enter' pentru afisarea produselor din categoria " << categorie_pr << " : " << endl;
}
  
 

return 0;

}



