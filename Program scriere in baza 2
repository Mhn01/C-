#include <iostream>
using namespace std;

int main()
{
    //  Program scriere in baza 2. BY MHN01.
    
    int n, r, y = 0, p = 1;
    cin >> n;
    while(n)
    {
       r = n % 2;
       n = n / 2;
       if(r == 1 || r == 0)
       {
           y = r * p + y;
           p = p * 10;
       }
    }
    cout << y;
    

    return 0;
}
